<odoo>
    <record id="view_gearguard_request_kanban" model="ir.ui.view">
        <field name="name">gearguard.request.kanban</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="stage" class="o_kanban_small_column">
                <field name="stage"/>
                <field name="is_overdue"/>
                <field name="technician_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_card #{record.is_overdue.raw_value ? 'oe_kanban_color_1' : ''}">
                            <div class="oe_kanban_content">
                                <div>
                                    <strong class="o_kanban_record_title"><field name="subject"/></strong>
                                </div>
                                <div>
                                    <field name="equipment_id"/>
                                </div>
                                <div t-if="record.is_overdue.raw_value" class="text-danger font-weight-bold">
                                    OVERDUE
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_right">
                                        <field name="technician_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_gearguard_request_form" model="ir.ui.view">
        <field name="name">gearguard.request.form</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="stage" widget="statusbar" options="{'clickable': '1'}"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="subject"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="equipment_id"/>
                            <field name="category_id"/>
                            <field name="request_type"/>
                        </group>
                        <group>
                            <field name="scheduled_date"/>
                            <field name="team_id"/>
                            <field name="team_member_ids" invisible="1"/>
                            <field name="technician_id" domain="[('id', 'in', team_member_ids)]"/>
                            <field name="duration"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_gearguard_request_calendar" model="ir.ui.view">
        <field name="name">gearguard.request.calendar</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <calendar string="Maintenance Calendar" date_start="scheduled_date" color="technician_id">
                <field name="subject"/>
                <field name="equipment_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_gearguard_request_graph" model="ir.ui.view">
        <field name="name">gearguard.request.graph</field>
        <field name="model">gearguard.request</field>
        <field name="arch" type="xml">
            <graph string="Requests by Team">
                <field name="team_id" type="row"/>
                <field name="stage" type="col"/>
            </graph>
        </field>
    </record>

    <record id="action_gearguard_request" model="ir.actions.act_window">
        <field name="name">Maintenance Requests</field>
        <field name="res_model">gearguard.request</field>
        <field name="view_mode">kanban,tree,form,calendar,graph,pivot</field>
        <field name="context">{'search_default_group_by_stage': 1}</field>
    </record>
</odoo>