<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Maintenance Request Form View -->
    <record id="view_maintenance_request_form" model="ir.ui.view">
        <field name="name">gear.guard.maintenance.request.form</field>
        <field name="model">gear_guard.maintenance.request</field>
        <field name="arch" type="xml">
            <form string="Maintenance Request">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="request_type"/>
                        <field name="state" readonly="1"/>
                    </group>

                    <group>
                        <field name="equipment_id"/>
                        <field name="maintenance_team_id"/>
                        <field name="technician_id"/>
                    </group>

                    <group>
                        <field name="scheduled_date"/>
                        <field name="duration"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <!-- Maintenance Request Kanban View -->
    <record id="view_maintenance_request_kanban" model="ir.ui.view">
        <field name="name">gear.guard.maintenance.request.kanban</field>
        <field name="model">gear_guard.maintenance.request</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state">
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <strong>
                                <field name="name"/>
                            </strong>
                            <div>
                                <field name="equipment_id"/>
                            </div>
                            <div>
                                <field name="technician_id"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

        <!-- Maintenance Request Calendar View -->
    <record id="view_maintenance_request_calendar" model="ir.ui.view">
        <field name="name">gear.guard.maintenance.request.calendar</field>
        <field name="model">gear_guard.maintenance.request</field>
        <field name="arch" type="xml">
            <calendar
                string="Preventive Maintenance"
                date_start="scheduled_date"
                color="maintenance_team_id">

                <field name="name"/>
                <field name="equipment_id"/>
                <field name="technician_id"/>

            </calendar>
        </field>
    </record>

        <!-- Preventive Maintenance Filter -->
    <record id="view_maintenance_request_search" model="ir.ui.view">
        <field name="name">gear.guard.maintenance.request.search</field>
        <field name="model">gear_guard.maintenance.request</field>
        <field name="arch" type="xml">
            <search>
                <filter
                    string="Preventive"
                    domain="[('request_type','=','preventive')]"/>
            </search>
        </field>
    </record>

</odoo>
