<odoo>
    <record id="view_gearguard_equipment_form" model="ir.ui.view">
        <field name="name">gearguard.equipment.form</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_maintenance_requests" type="object" class="oe_stat_button" icon="fa-wrench">
                            <field name="maintenance_count" widget="statinfo" string="Requests"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="serial_no"/>
                            <field name="category_id"/>
                            <field name="is_usable" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="team_id"/>
                            <field name="technician_id"/>
                            <field name="location"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="purchase_date"/>
                                <field name="warranty_info"/>
                                <field name="department"/>
                                <field name="employee_id"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_gearguard_equipment_tree" model="ir.ui.view">
        <field name="name">gearguard.equipment.tree</field>
        <field name="model">gearguard.equipment</field>
        <field name="arch" type="xml">
            <tree string="Equipment" decoration-muted="is_usable == False">
                <field name="name"/>
                <field name="serial_no"/>
                <field name="category_id"/>
                <field name="team_id"/>
                <field name="is_usable"/>
            </tree>
        </field>
    </record>

    <record id="action_gearguard_equipment" model="ir.actions.act_window">
        <field name="name">Equipment</field>
        <field name="res_model">gearguard.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>